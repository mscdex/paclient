{
  "name": "paclient",
  "version": "0.0.2",
  "author": "Brian White <mscdex@mscdex.net>",
  "description": "PulseAudio client written in pure JavaScript for node.js",
  "main": "./lib/client",
  "engines": {
    "node": ">=6.0.0"
  },
  "keywords": [
    "pulseaudio",
    "audio",
    "client",
    "management",
    "configuration"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/mscdex/paclient/raw/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/mscdex/paclient.git"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint-config-xo-overrides": "^1.1.2",
    "nyc": "^13.1.0",
    "pify": "^4.0.1",
    "xo": "^0.23.0"
  },
  "scripts": {
    "test": "xo && nyc ava"
  },
  "xo": {
    "space": 2,
    "extends": [
      "eslint-config-xo-overrides"
    ],
    "rules": {
      "array-bracket-spacing": "off",
      "array-element-newline": "off",
      "arrow-parens": "off",
      "block-scoped-var": "off",
      "capitalized-comments": "off",
      "comma-dangle": "off",
      "curly": "off",
      "default-case": "off",
      "key-spacing": "off",
      "no-constant-condition": "off",
      "no-const-assign": "warn",
      "no-implicit-coercion": "off",
      "no-lonely-if": "off",
      "no-multi-assign": "off",
      "no-multiple-empty-lines": "off",
      "no-redeclare": "off",
      "no-trailing-spaces": "off",
      "no-undef": "warn",
      "no-unused-vars": "warn",
      "no-var": "off",
      "operator-linebreak": "off",
      "prefer-destructuring": "off",
      "space-before-function-paren": "off",
      "unicorn/prefer-type-error": "warn",
      "import/no-useless-path-segments": "off",
      "no-cond-assign": "off",
      "no-multi-spaces": "warn",
      "no-negated-condition": "off",
      "no-return-assign": "off",
      "no-unused-expressions": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/import-index": "off",
      "func-names": "off"
    }
  }
}
